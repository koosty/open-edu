{
    "name": "open-edu",
    "private": true,
    "version": "1.3.0",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:unit": "vitest",
        "test": "npm run test:unit -- --run",
        "test:fast": "vitest run --reporter=verbose --no-coverage",
        "test:coverage": "vitest run --config=vitest.coverage.config.ts",
        "test:coverage:watch": "vitest --config=vitest.coverage.config.ts",
        "test:coverage:ui": "vitest --ui --config=vitest.coverage.config.ts",
        "validate:firebase": "node scripts/validate-firebase-config.mjs",
        "validate:all": "npm run check && npm run validate:firebase"
    },
    "devDependencies": {
        "@codecov/sveltekit-plugin": "^1.9.1",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.47.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.14",
        "@types/dompurify": "^3.0.5",
        "@types/katex": "^0.16.7",
        "@types/marked": "^5.0.2",
        "@vitest/browser-playwright": "^4.0.5",
        "@vitest/coverage-v8": "^4.0.9",
        "firebase-admin": "^13.6.0",
        "playwright": "^1.56.1",
        "svelte": "^5.41.0",
        "svelte-check": "^4.3.3",
        "tailwindcss": "^4.1.14",
        "typescript": "^5.9.3",
        "vite": "^7.1.10",
        "vitest": "^4.0.5",
        "vitest-browser-svelte": "^2.0.1"
    },
    "dependencies": {
        "bits-ui": "^2.14.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dompurify": "^3.3.0",
        "firebase": "^12.6.0",
        "highlight.js": "^11.11.1",
        "isomorphic-dompurify": "^2.32.0",
        "katex": "^0.16.25",
        "lucide-svelte": "^0.553.0",
        "marked": "^17.0.0",
        "tailwind-merge": "^3.4.0",
        "zod": "^4.1.12"
    }
}
