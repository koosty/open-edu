rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isInstructor() {
      return isAuthenticated() && (getUserRole() == 'instructor' || getUserRole() == 'admin');
    }
    
    function isStudent() {
      return isAuthenticated() && getUserRole() == 'student';
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
    }

    // Courses collection
    match /courses/{courseId} {
      // Anyone can read published courses, authenticated users can read all
      allow read: if resource.data.isPublished == true || isAuthenticated();
      
      // Only instructors and admins can create courses
      allow create: if isInstructor() && 
        request.auth.uid == request.resource.data.instructorId;
      
      // Only course instructor or admin can update
      allow update: if isAuthenticated() && 
        (request.auth.uid == resource.data.instructorId || isAdmin());
      
      // Only admin can delete courses
      allow delete: if isAdmin();
    }

    // Course enrollments collection
    match /enrollments/{enrollmentId} {
      // Users can read their own enrollments, instructors/admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || 
         isInstructor() ||
         isAdmin());
      
      // Users can enroll themselves in courses
      allow create: if isAuthenticated() && 
        isOwner(request.resource.data.userId) &&
        exists(/databases/$(database)/documents/courses/$(request.resource.data.courseId));
      
      // Users can update their own enrollment status, instructors/admins can update all
      allow update: if isAuthenticated() && 
        (isOwner(resource.data.userId) || 
         isInstructor() ||
         isAdmin());
      
      // Only admin can delete enrollments
      allow delete: if isAdmin();
    }

    // Course Progress tracking collection
    match /courseProgress/{progressId} {
      // Users can read their own progress, instructors/admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || 
         isInstructor() ||
         isAdmin());
      
      // Users can create/update their own progress
      allow create, update: if isAuthenticated() && 
        isOwner(request.resource.data.userId);
      
      // Only admin can delete progress
      allow delete: if isAdmin();
    }

    // Quizzes collection
    match /quizzes/{quizId} {
      // Published quizzes can be read by enrolled students
      // Unpublished quizzes can only be read by quiz creator or instructor/admin
      // Note: Using createdBy field for list queries since get() isn't allowed in queries
      allow read: if isAuthenticated() && 
        (resource.data.isPublished == true ||
         resource.data.createdBy == request.auth.uid ||
         isInstructor() ||
         isAdmin());
      
      // Only instructors can create quizzes
      allow create: if isAuthenticated() && 
        isInstructor() &&
        request.resource.data.createdBy == request.auth.uid;
      
      // Only quiz creator or admin can update
      allow update: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
      
      // Only quiz creator or admin can delete quizzes
      allow delete: if isAuthenticated() &&
        (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // Quiz attempts collection
    match /quiz-attempts/{attemptId} {
      // Users can read their own attempts, instructors/admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || 
         isInstructor() ||
         isAdmin());
      
      // Users can create their own attempts
      allow create: if isAuthenticated() && 
        isOwner(request.resource.data.userId);
      
      // Users can update their own in-progress attempts only
      // Once submitted, attempts are immutable
      allow update: if isAuthenticated() && 
        isOwner(resource.data.userId) &&
        resource.data.status == 'in_progress';
      
      // Only admin can delete attempts
      allow delete: if isAdmin();
    }

    // User achievements collection
    match /achievements/{achievementId} {
      // Users can read their own achievements, admins can read all
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Only admin/system can create achievements
      allow create: if isAdmin();
      
      // No updates to achievements (immutable)
      allow update: if false;
      
      // Only admin can delete achievements
      allow delete: if isAdmin();
    }

    // Analytics collection
    // Instructors can read analytics for their own courses
    // Note: Analytics data is aggregated from other collections (progress, reading positions, notes)
    // This is here for future caching/pre-aggregated analytics
    match /analytics/{document=**} {
      allow read: if isInstructor();
      allow write: if isAdmin();
    }

    // System notifications
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Admin can create notifications
      allow create: if isAdmin();
      
      // Users can mark as read, admin can do anything
      allow update: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Reading positions collection (auto-save scroll position)
    match /readingPositions/{positionId} {
      // Users can read their own reading positions
      // Instructors can read all positions for analytics
      allow read: if isAuthenticated() && 
        (positionId.matches('^' + request.auth.uid + '_.*') || isInstructor());
      
      // Users can create/update their own reading positions
      allow create, update: if isAuthenticated() && 
        positionId.matches('^' + request.auth.uid + '_.*');
      
      // Users can delete their own reading positions
      allow delete: if isAuthenticated() && 
        positionId.matches('^' + request.auth.uid + '_.*');
    }

    // Notes collection (lesson notes, bookmarks, highlights)
    match /notes/{noteId} {
      // Users can read their own notes
      // Instructors can read all notes for analytics
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isInstructor() || isAdmin());
      
      // Users can create their own notes
      allow create: if isAuthenticated() && 
        isOwner(request.resource.data.userId);
      
      // Users can update their own notes
      allow update: if isAuthenticated() && 
        isOwner(resource.data.userId);
      
      // Users can delete their own notes
      allow delete: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
    }

    // Bookmarks collection (quick save positions)
    match /bookmarks/{bookmarkId} {
      // Users can read their own bookmarks
      // Instructors can read all bookmarks for analytics
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isInstructor() || isAdmin());
      
      // Users can create their own bookmarks
      allow create: if isAuthenticated() && 
        isOwner(request.resource.data.userId);
      
      // Users can delete their own bookmarks
      allow delete: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
    }

    // Highlights collection (text highlights with optional notes)
    match /highlights/{highlightId} {
      // Users can read their own highlights
      allow read: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
      
      // Users can create their own highlights
      allow create: if isAuthenticated() && 
        isOwner(request.resource.data.userId);
      
      // Users can update their own highlights
      allow update: if isAuthenticated() && 
        isOwner(resource.data.userId);
      
      // Users can delete their own highlights
      allow delete: if isAuthenticated() && 
        (isOwner(resource.data.userId) || isAdmin());
    }

    // Catch-all: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}